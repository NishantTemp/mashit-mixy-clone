{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build@3.0.0",
      "config": { "zeroConfig": true }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}